<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlindsUp.MainPage">


    
     <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly" Padding="0,0,0,0" BackgroundColor="LightSalmon">

            <Label x:Name="Time" Text="Clock" FontSize="Header" Padding="0,0,0,0"
                    IsVisible="True" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>

        <StackLayout Orientation="Horizontal" Padding="0,15,0,15" HorizontalOptions="CenterAndExpand">
            <ImageButton x:Name="IBplay" CornerRadius="23" Source="play.png"  
                         Clicked="Play_Clicked" HorizontalOptions="Center" />
            <ImageButton x:Name="IBpause" CornerRadius="23" Source="pause.png"   
                         IsVisible="False"  Clicked="Pause_Clicked"  />
            <Label x:Name="Level" Text="Level" FontSize="30"  />
        </StackLayout>

        <Label x:Name="Blinds" Text="Blinds" FontSize="Header"  FontAttributes="Bold" Padding="0,0,0,0" HorizontalOptions="CenterAndExpand" />

        </FlexLayout>
  

</ContentPage>

    